{
  "name":              "pjmd89/graphql-php",
  "description":       "Fork modified for webonyx/graphql-php",
  "type":              "library",
  "license":           "MIT",
  "homepage":          "https://github.com/pjmd89/graphql-php",
  "keywords":          [
    "graphql",
    "API"
  ],
  "require": {
    "php": "^7.1||^8.0",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "pjmd89\\GraphQL\\": "src/"
    }
  },
  "suggest": {
    "react/promise": "To leverage async resolving on React PHP platform",
    "psr/http-message": "To use standard GraphQL server"
  }
}
